<form method="POST" action="/concerts/edit/{{ concert.id }}">
    <div>
        Artist: <input type="text" name="artist" placeholder="Artist" value="{{concert.artist}}">
    </div>
    <div>
        Venue: <input type="text" name="venue" placeholder="Venue" value="{{concert.venue}}">
    </div>
    <div>
        Location: <input type="text" name="location" placeholder="Location"value="{{concert.location}}">
    </div>
    <div>
        Date: <input type="Date" name="date"placeholder="Date"value="{{concert.date}}">
    </div>
    <div>
        Status:
       <select id="status" name="Status"value="{{concert.status}}" required>
            <option value="upcoming">Upcoming</option>
            <option value="past">Past</option>
          
        </select>  
    </div>

    <input type="submit" value="Save Changes">
</form>